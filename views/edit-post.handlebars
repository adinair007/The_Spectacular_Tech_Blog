<section>
  <a href='/dashboard'> &larr; Back to dashboard</a>
  <div class='card'>
    <div class='card-body'>
      <h2 class='card-header'>
        Edit Post
      </h2>
      <form id='edit-post-form'>
        <input type="hidden" id="post-id" value="{{post.id}}" />
        <h2>Title</h2>
        <div>
          <input name='post-title' type='text' value='{{post.title}}' />
        </div>
        <h2>Content</h2>
        <div>
          <input name='post-body' type='text' value='{{post.body}}' />
        </div>
        <div>
          by you on:
          {{format_date post.created_at}}
          <a href='/post/{{post.id}}'>{{post.comments.length}}
            {{format_plural 'comment' post.comments.length}}</a>
        </div>
        <button class='btn' type='submit'>Save post</button>
      </form>
      <div class="delete">
        <button class='btn' type='button' id='delete-btn'>Delete post</button>
      </div>
    </div>
  </div>
</section>

<script src='/js/edit.js'></script>